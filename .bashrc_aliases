# User specific aliases and functions

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias la='ls -la'

alias vi='/bin/env vim'

#alias tmux='if /usr/bin/tmux has; then /usr/bin/tmux attach; else /usr/bin/tmux new; fi'
alias tls='tmux list-sessions'
alias ta='tmux a'

# screen aliases
alias sls='screen -ls'
alias sc='screen -Ddr'

alias grep='grep --color=always -r --exclude-dir="*/tmp/cache/templates" --exclude=*.min.js --exclude=*.log --exclude-dir=*css/bootstrap-3.0.0/*'
alias g='grep'
alias less='less -R'

alias gd='git diff'
alias gdw='git diff --word-diff'
alias gs='git status'
alias gco='git co --'
alias ga='git add'
alias gr='git reset HEAD'
alias gp='git pull --rebase'


function gcor {
  git reset HEAD $1;
  git co $1;
}  