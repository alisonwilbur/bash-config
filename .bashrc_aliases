### grep

alias g='grep -r --color=always --exclude={*.min.js,*.log,*.wsdl,*.jar,main.map,emailable-report.html,*build/main.js} --exclude-dir={*/tmp/cache/templates,bootstrap-3.0.0,target,node_modules,surefire-reports,.git}'
alias less='less -R'

### git 

alias gd='git diff'
alias gdw='git diff --word-diff'
alias gs='git status'
alias gco='git co --'
alias ga='git add'
alias gr='git reset HEAD'
alias gp='git pull'
alias gpr='git pull --rebase'
alias gb='git br'

function grh {
  git reset HEAD $1;
}  

function grhco {
  git reset HEAD $1;
  git co $1;
}  


### text editors 

alias vi='/bin/env vim'

# Set up a symlink so that sublime can be opened from the command line
sublime_link='/usr/local/bin/sublime'
if [ ! -L ${sublime_link} ] || [ ! -e ${sublime_link} ] ; then
  ln -s "/Applications/Sublime Text.app/Contents/SharedSupport/bin/subl" ${sublime_link}
fi


### development

alias mtw='mvn clean install -pl websites -am'
alias mtce='mvn clean install -pl ce_tool -am'




